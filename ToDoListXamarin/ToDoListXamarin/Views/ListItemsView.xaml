<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ToDoListXamarin.ViewModels" 
             x:DataType="viewmodels:ListItemViewModel"
             x:Class="ToDoListXamarin.Views.ListItemsView"
             Title="{Binding Title}"
             >

    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Id}" FontSize="Large"/>
            <Label Text="{Binding Title}" FontSize="Large"/>
            <Label Text="{Binding ShoppingDate}" FontSize="Large"/>
            <Button Text="Delete" Command="{Binding DeleteList}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>